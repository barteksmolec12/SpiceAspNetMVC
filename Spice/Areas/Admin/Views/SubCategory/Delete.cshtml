@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Sub Category Delete</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="SubCategory.Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SubCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SubCategory.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Category.Name" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.SubCategory.Id" />
            </div>
        </div>
    </div>
</form>
